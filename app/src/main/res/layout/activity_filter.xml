<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FilterActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Article Number"
            android:textStyle="bold"
            android:textSize="15dp"
            tools:ignore="MissingConstraints" />
        <RadioGroup
            android:id="@+id/radioArticleNoGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="50dp">

            <RadioButton
                android:id="@+id/radioArticleNo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SH1" />
            <!--android:layoutDirection="rtl"-->

            <RadioButton
                android:id="@+id/radioArticleNo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SH2" />

            <RadioButton
                android:id="@+id/radioArticleNo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SH3" />
            <RadioButton
                android:id="@+id/radioArticleNo4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SH4" />
            <RadioButton
                android:id="@+id/radioArticleNo5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SH5" />
            <RadioButton
                android:id="@+id/radioArticleNo6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SH6" />
        </RadioGroup>
    </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Price"
        android:textStyle="bold"
        android:textSize="15dp"
        tools:ignore="MissingConstraints" />
    <RadioGroup
        android:id="@+id/radioPriceGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="50dp">

        <RadioButton
            android:id="@+id/radioPrice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100-200" />
        <!--android:layoutDirection="rtl"-->

        <RadioButton
            android:id="@+id/radioPrice2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="200-500" />

        <RadioButton
            android:id="@+id/radioPrice3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="500-1000" />
    </RadioGroup>
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clearButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear" />

            <Button
                android:id="@+id/applyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apply" />
</LinearLayout>
</LinearLayout>