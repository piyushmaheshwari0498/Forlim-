<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/MyAppTheme"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_scrollFlags="scroll|enterAlways"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/rr_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editView"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="25dp"
                android:elevation="2dp"
                android:text="Edit"
                android:textColor="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveView"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="25dp"
                android:elevation="2dp"
                android:text="Save"
                android:textColor="@color/black"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:gravity="center"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvBilling"
                        style="@style/BigTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/billing_details" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:gravity="top|center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/LargeTextViewTitle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center|left"
                                android:text="@string/customer_type" />

                            <TextView
                                android:id="@+id/tvCustomerType"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:gravity="center|left"
                                android:theme="@style/CustomEditTextStyle" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_address"
                            style="@style/MediumTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:padding="5dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/inputetaddress"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:gravity="start"
                                android:hint="@string/address"
                                android:textColorHint="@color/black"
                                android:visibility="gone"
                                app:endIconMode="clear_text"
                                app:endIconTint="@color/black"
                                app:errorEnabled="true"
                                app:errorIconDrawable="@drawable/ic_baseline_error_outline_24"
                                app:errorTextColor="@color/erorr_red"
                                app:helperTextEnabled="true"
                                app:hintAnimationEnabled="true"
                                app:hintTextColor="@color/black">
                                <!--  android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etBillingAddr"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top|center"
                                    android:inputType="textPostalAddress"
                                    android:maxLength="250"
                                    android:maxLines="3"
                                    android:minLines="1"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_city"
                                style="@style/MediumTextView"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center|left"
                                android:padding="5dp" />

                            <Spinner
                                android:id="@+id/spCity"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_state"
                                style="@style/MediumTextView"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center|left"
                                android:padding="5dp" />

                            <Spinner
                                android:id="@+id/spState"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_country"
                                style="@style/MediumTextView"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center|left"
                                android:padding="5dp" />

                            <Spinner
                                android:id="@+id/spCountry"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/inputetpincode"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:gravity="start"
                                android:hint="@string/pincode"
                                android:textColorHint="@color/black"
                                android:visibility="gone"
                                app:endIconMode="clear_text"
                                app:endIconTint="@color/black"
                                app:errorEnabled="true"
                                app:errorIconDrawable="@drawable/ic_baseline_error_outline_24"
                                app:errorTextColor="@color/erorr_red"
                                app:helperTextEnabled="true"
                                app:hintAnimationEnabled="true"
                                app:hintTextColor="@color/black">
                                <!--  android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etPincode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top|center"
                                    android:inputType="number"
                                    android:maxLength="6"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_gst"
                                style="@style/MediumTextView"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center|left"
                                android:padding="5dp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/inputetgst"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:gravity="start"
                                android:hint="@string/gst_no"
                                android:textColorHint="@color/black"
                                android:visibility="gone"
                                app:endIconMode="clear_text"
                                app:endIconTint="@color/black"
                                app:errorEnabled="true"
                                app:errorIconDrawable="@drawable/ic_baseline_error_outline_24"
                                app:errorTextColor="@color/erorr_red"
                                app:helperTextEnabled="true"
                                app:hintAnimationEnabled="true"
                                app:hintTextColor="@color/black">
                                <!--  android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/gstNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top|center"
                                    android:inputType="textCapWords"
                                    android:maxLength="16"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:visibility="gone"
                style="@style/BigTitle"
                android:textColor="@color/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note : Your Billing and delivery address are same! \n Do you want change." />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/changeView"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="25dp"
                android:elevation="2dp"
                android:text="Change"
                android:visibility="gone"
                android:textColor="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/doneView"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="25dp"
                android:elevation="2dp"
                android:text="Done"
                android:textColor="@color/black" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ll_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:gravity="center"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

               <!-- <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">-->
                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="110dp" />
               <!-- </androidx.core.widget.NestedScrollView>-->

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorProcced"
        android:padding="10dp"
        android:text="@string/delivery_confirmed"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/proceed_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_anchorGravity="bottom"
        android:background="@color/colorProcced"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/subtotal"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/grand_total_cart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/deliveryConfirmBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorProcced"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/delivery_confirmed"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
